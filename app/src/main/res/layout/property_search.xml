<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin_0"
    android:paddingRight="@dimen/activity_horizontal_margin_0"
    android:paddingTop="@dimen/activity_vertical_margin_0"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin_0"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:layout_width="246dp"
            android:layout_height="match_parent"
            android:inputType="text"
            android:id="@+id/editText"
            android:layout_weight="1.11" />

        <Button
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:text="@string/go"
            android:id="@+id/go" />

    </LinearLayout>

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.MapFragment" />


</LinearLayout>
